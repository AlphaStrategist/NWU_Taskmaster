@{
    ViewBag.Title = "Welcome to NWU Taskmaster";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div id="landingCarousel" class="carousel slide shadow-lg" data-bs-ride="carousel">
                <!-- Indicators -->
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#landingCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#landingCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#landingCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
                    <button type="button" data-bs-target="#landingCarousel" data-bs-slide-to="3" aria-label="Slide 4"></button>
                    <button type="button" data-bs-target="#landingCarousel" data-bs-slide-to="4" aria-label="Slide 5"></button>
                </div>

                <!-- Carousel Items -->
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/Content/Images/screenshot1.jpg" class="d-block w-100" alt="Screenshot 1">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Organize Your Tasks</h5>
                            <p>Effortlessly manage your workload with NWU Taskmaster.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/Content/Images/screenshot2.jpg" class="d-block w-100" alt="Screenshot 2">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Track Deadlines</h5>
                            <p>Stay ahead of your schedule with timely reminders.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/Content/Images/screenshot3.jpg" class="d-block w-100" alt="Screenshot 3">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Collaborate Seamlessly</h5>
                            <p>Work together with peers for maximum productivity.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/Content/Images/screenshot4.jpg" class="d-block w-100" alt="Screenshot 4">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Visualize Your Progress</h5>
                            <p>Track task completion with clear visual indicators.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/Content/Images/screenshot5.jpg" class="d-block w-100" alt="Screenshot 5">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Plan for Success</h5>
                            <p>Achieve your goals with intuitive planning tools.</p>
                        </div>
                    </div>
                </div>

                <!-- Controls -->
                <button class="carousel-control-prev" type="button" data-bs-target="#landingCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#landingCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </div>
</div>
