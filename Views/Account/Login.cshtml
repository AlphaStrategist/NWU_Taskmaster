@model NWU_Taskmaster.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
}

<div class="container" style="margin-top: 100px;">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <!-- Adjusted col width to make it thinner -->
            <div class="card shadow" style="padding-bottom: 10px; min-height: 400px;">
                <div class="card-header text-center" style="background-color: #4b0082; color: white;">
                    <h3>Welcome to NWU Taskmaster</h3>
                </div>
                <div class="card-body">
                    <h5 class="text-center">Log in to your account</h5>
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group row" style="margin-bottom: 15px;">
                            <!-- Reduced spacing -->
                            <label for="Email" class="col-md-4 col-form-label text-md-right">Email</label>
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter your email" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row" style="margin-bottom: 15px;">
                            <!-- Reduced spacing -->
                            <label for="Password" class="col-md-4 col-form-label text-md-right">Password</label>
                            <div class="col-md-8">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter your password" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group text-center">
                            <input type="submit" value="Log In" class="btn btn-primary btn-block" style="background-color: #4b2e83; border: none;" />
                        </div>
                        <p class="text-center mt-3">
                            <a href="@Url.Action("Register", "Account")" class="text-decoration-underline" style="color: #4b2e83;">New? Sign Up</a>
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
